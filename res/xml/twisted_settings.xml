<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
android:title="@string/twisted_settings_title" >

    <PreferenceCategory
        android:key="twisted_display"
        android:title="@string/twisted_display">

        <PreferenceScreen
            android:fragment="com.android.settings.twisted.TwistedDisplay"
            android:key="twisted_display_settings"
            android:title="@string/twisted_settings_title"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="twisted_power"
        android:title="@string/twisted_power">

        <PreferenceScreen
            android:fragment="com.android.settings.twisted.PowerMenuSettings"
            android:key="twisted_powermenu_settings"
            android:title="@string/powermenu_settings_title"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="twisted_volume"
        android:title="@string/twisted_volume">

        <PreferenceScreen
            android:fragment="com.android.settings.twisted.VolumeRockerSettings"
            android:key="twisted_volumerocker_settings"
            android:title="@string/volumerocker_settings_title"/>

    </PreferenceCategory>

        <PreferenceScreen
                android:key="power_menu_general_category"
                android:fragment="com.android.settings.chroma.PowerMenuActions"
                android:title="@string/power_menu_title" 
                android:summary="Click to change power button options."/>

        <PreferenceScreen
                android:fragment="com.android.settings.twisted.NavBarSettings"
                android:key="pure_navbar_settings"
                android:title="@string/navbar_settings_title"/>

</PreferenceScreen>


